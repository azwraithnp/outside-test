{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "baseUrl": "./",
      "sourceMap": true,
      "module": "esnext",
      "target": "esnext",
      "jsx": "react",
      "allowJs": true,
      "noEmit": true,
      "noImplicitThis": true,
      "strictNullChecks": true,
      "lib": ["es6", "dom"],
      "typeRoots": ["./types", "./node_modules/@types"],
      "esModuleInterop": true
    },
    "exclude": ["node_modules"]
  }